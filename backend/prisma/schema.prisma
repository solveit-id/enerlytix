datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  USER
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  passwordHash String
  role         Role      @default(USER)
  meters       Meter[]
  sessions     Session[]
  createdAt    DateTime  @default(now())
}

model Session {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}

model Meter {
  id           Int            @id @default(autoincrement())
  user         User           @relation(fields: [userId], references: [id])
  userId       Int
  meterNumber  String
  alias        String
  powerLimitVa Int            @default(1300)
  currentKwh   Float          @default(0)
  tokenBalance Int            @default(0)
  currentWatt  Int            @default(0)
  lastUpdate   DateTime       @default(now())
  tokens       TokenHistory[]
  usageHistory UsageHistory[]
}

model TokenHistory {
  id          Int      @id @default(autoincrement())
  meter       Meter    @relation(fields: [meterId], references: [id])
  meterId     Int
  tokenNumber String
  kwhAdded    Float
  price       Int
  purchasedAt DateTime @default(now())
}

model UsageHistory {
  id        Int      @id @default(autoincrement())
  meter     Meter    @relation(fields: [meterId], references: [id])
  meterId   Int
  usageDate DateTime
  kwhUsed   Float
  createdAt DateTime @default(now())
}
